@model LoginModel
<h2>Inloggning för Småstads personal</h2>
<p class="info">En säker tjänst från Småstads IT-avdelning</p>

<form method="post" asp-controller="Home" asp-action="Login">
	<p>
		<input type="hidden" name="isSubmitted" value="true" />
		<input type="hidden" asp-for="ReturnUrl" />
	</p>
	<p>
		<span asp-validation-for="UserName" class="label">Användarnamn:</span><br />
		<input asp-for="UserName" type="text"/>
	</p>
	<p>
		<span asp-validation-for="Password" class="label">Lösenord:</span><br />
		<input asp-for="Password" type="password"/>
	</p>
	<p>
		<input class="button" type="submit" value="Log in" />
		<br />
		<!--Dessa länkar ska tas bort i uppgift 5 eftersom vi då fixar till att inloggningen hämtar rätt sida utifrån rollen-->
		<a class="button" asp-controller="Coordinator" asp-action="StartCoordinator">Inloggning av samordnare</a><br />
		<a class="button" asp-controller="Manager" asp-action="StartManager">Inloggning av chefer</a><br />
		<a class="button" asp-controller="Investigator" asp-action="StartInvestigator">Inloggning av handläggare</a>
	</p>
	<div asp-validation-summary="All"></div>
</form>